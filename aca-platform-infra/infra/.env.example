# Infrastructure configuration for Azure Container Apps
#
# Copy to .env and fill in the required values.
# Run: ./create-resources.sh

# ===========================================================================
# REQUIRED - Must be globally unique
# ===========================================================================

RESOURCE_GROUP=rg-aca-platform
LOCATION=eastus

# Must be globally unique (3-24 chars, lowercase alphanumeric)
STORAGE_ACCOUNT_NAME=acastorage12345
KEYVAULT_NAME=aca-kv-12345
ACR_NAME=acareg12345

# ===========================================================================
# OPTIONAL - Sensible defaults provided
# ===========================================================================

# Subscription (uses current if not set)
#SUBSCRIPTION_ID=

# Tags
TAG_ENVIRONMENT=dev
TAG_OWNER=your-name

# Networking
VNET_NAME=aca-vnet
VNET_ADDRESS_PREFIX=10.10.0.0/16
INFRA_SUBNET_NAME=aca-infra-subnet
INFRA_SUBNET_PREFIX=10.10.0.0/23
PE_SUBNET_NAME=aca-pe-subnet
PE_SUBNET_PREFIX=10.10.2.0/27

# Container Apps environment
ACA_ENVIRONMENT=aca-env
INTERNAL_ONLY=false

# Container Registry
ACR_SKU=Standard

# Managed identity
CREATE_MANAGED_IDENTITY=true
USER_ASSIGNED_IDENTITY_NAME=aca-uami
ASSIGN_KV_ROLE=true

# Storage lifecycle (optional cost control)
LIFECYCLE_ENABLE=false
LIFECYCLE_MOVE_TO_COOL_AFTER_DAYS=30
LIFECYCLE_DELETE_AFTER_DAYS=180
